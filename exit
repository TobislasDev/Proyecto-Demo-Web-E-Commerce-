[32m+[m[32m            'marca': forms.Select(attrs={'class': 'form-control'}),[m
[32m+[m[32m            'categoroa': forms.Select(attrs={'class':'form-control'}),[m
[32m+[m[32m            'precio': forms.NumberInput(attrs={'class':'form-control','step':'0.01','min': '0'}),[m
[32m+[m[32m            'imagen': forms.ImageField(label="IMG", required=False, widget=forms.FileInput(attrs={'class': 'form-control'})),[m
[32m+[m[32m            'stock_min':forms.NumberInput(attrs={'class':'form-control','step':'1','min': '1'}),[m
[32m+[m[32m            'stock_max':forms.NumberInput(attrs={'class':'form-control','step':'1','min': '1'}),[m
[32m+[m[32m            'proveedor': forms.Select(attrs={'class':'form-control'})[m
[32m+[m
[32m+[m[32m#IMPORTANTE PARA AGREGAR IMAGENES A NUESTRO FORMULARIO DEBEMOS DE USAR EL WIDGETS ClearableFileInput[m
[32m+[m
[32m+[m[32m        }[m
[32m+[m
