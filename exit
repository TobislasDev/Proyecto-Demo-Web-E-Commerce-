[32m+[m[32m#FUNCION PARA CORROBORAR QUE EL USUARIO NO DEJE SALDO NEGATIVO MENOR A 0[m[41m [m
[32m+[m[32m    def clean_precio(self):[m
[32m+[m[32m        precio = self.cleaned_data.get('precio')[m
[32m+[m[32m        if precio is not None and precio < 0:[m
[32m+[m[32m            forms.ValidationError('El precio debe ser mayor a 0')[m
[32m+[m[32m        return precio[m
[32m+[m[41m    [m
[32m+[m
[32m+[m[32mclass CrearUsuario(forms.Form):[m
[32m+[m[32m    nombre = forms.CharField([m
[32m+[m[32m        label="Usuario",[m[41m [m
[32m+[m[32m        max_length=100,[m[41m [m
[32m+[m[32m        widget=forms.TextInput(attrs={'class': 'form-control'})[m
[32m+[m[32m    )[m
[32m+[m[32m    apellido = forms.CharField([m
[32m+[m[32m        label="Apellido",[m[41m [m
[32m+[m[32m        max_length=100,[m[41m [m
[32m+[m[32m        widget=forms.TextInput(attrs={'class': 'form-control'})[m
[32m+[m[32m    )[m
[32m+[m[32m    email = forms.EmailField([m
[32m+[m[32m        label="Email",[m[41m [m
[32m+[m[32m        max_length=100,[m[41m [m
[32m+[m[32m        widget=forms.EmailInput(attrs={'class': 'form-control'})[m
[32m+[m[32m    )[m
[32m+[m[32m    password = forms.CharField([m
[32m+[m[32m        label="Contrase√±a",[m[41m [m
[32m+[m[32m        max_length=100,[m[41m [m
[32m+[m[32m        widget=forms.PasswordInput(attrs={'class': 'form-control'})[m
[32m+[m[32m    )[m
[32m+[m[32m    confirm_password = forms.CharField([m
[32m+[m[32m        label="Confirmar contrase√±a",[m[41m [m
[32m+[m[32m        max_length=100,[m[41m [m
[32m+[m[32m        widget=forms.PasswordInput(attrs={'class': 'form-control'})[m
[32m+[m[32m    )[m
[32m+[m[41m    [m
[32m+[m[32m    #AGREGAMOS UNA FUNCION PARA PODER LIMPIAR LOS DATOS y CONFIRMAR SI LAS CONTRASE√ëAS COINCIDEN CORRECTAMENTE[m
[32m+[m
[32m+[m[32m    def clean(self):[m
[32m+[m[32m        clened_data = super().clean()[m
[32m+[m[32m        password = clened_data.get('password')[m
[32m+[m[32m        confirm_password = clened_data.get('confirm_password')[m
[32m+[m
[32m+[m[32m        if password and confirm_password and password != confirm_password:[m
[32m+[m[32m            raise forms.ValidationError("Las contrase√±as no coinciden, VERIFICAR!")[m
[32m+[m[32m        return clened_data[m
